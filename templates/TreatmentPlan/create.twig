{% extends "base.html.twig" %}

{% block body %}
    <main id="main">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <h1 class="card-header">Zaplanuj zabieg dla turnusu</h1>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.rehabilitationStay) }}
                                {{ form_widget(form.rehabilitationStay, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.treatment) }}
                                {{ form_widget(form.treatment, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.start_time) }}
                                {{ form_widget(form.start_time, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.end_time) }}
                                {{ form_widget(form.end_time, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        </div>
    </main>
{% endblock %}
