{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/css/tempusdominus-bootstrap-4.min.css" />
{% endblock %}

{% block body %}
    <main id="main">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <h1 class="card-header">Zaplanuj zabieg dla turnusu</h1>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.rehabilitationStay) }}
                                {{ form_widget(form.rehabilitationStay, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.treatment) }}
                                {{ form_widget(form.treatment, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.start_time) }}
                                {{ form_widget(form.start_time, {'attr': {'class': 'form-control', 'type': 'time'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.end_time) }}
                                {{ form_widget(form.end_time, {'attr': {'class': 'form-control', 'type': 'time'}}) }}
                            </div>
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                    <section id="about" class="about">
                        <table class="table table-success transparent-table">
                            <thead>
                            <tr>
                                <th scope="col">Zabieg</th>
                                <th scope="col">Termin rozpoczęcia</th>
                                <th scope="col">Termin zakończenia</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for data in data_treatments %}
                                <tr>
                                    <th scope="row">{{ data.getTreatment().getName() }} </th>
                                    <td>{{ data.getStartTime()|date('d-m-Y H:i:s') }}</td>
                                    <td>{{ data.getEndTime()|date('d-m-Y H:i:s') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </main>


{% endblock %}