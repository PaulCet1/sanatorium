{% extends "base.html.twig" %}
{% block body %}
    {% embed 'Structure/Form/create_structure.html.twig' with {'title': 'Planowanie zabiegów dla turnusu'} %}
        {% block form_content %}
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.rehabilitationStay) }}
                {{ form_widget(form.rehabilitationStay, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.treatment) }}
                {{ form_widget(form.treatment, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.day_number) }}
                {{ form_widget(form.day_number, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.start_time) }}
                {{ form_widget(form.start_time, {'attr': {'class': 'form-control', 'type': 'time'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.end_time) }}
                {{ form_widget(form.end_time, {'attr': {'class': 'form-control', 'type': 'time'}}) }}
            </div> {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_end(form) }}
        {% endblock %}
    {% endembed %}
    <main id="main">
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="row">
                <section id="about" class="about">
                    <table class="table table-success transparent-table">
                        <thead>
                        <tr>
                            <th scope="col">Zabieg</th>
                            <th scope="col">Dzień</th>
                            <th scope="col">Termin rozpoczęcia</th>
                            <th scope="col">Termin zakończenia</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for data in data_treatments %}
                            <tr>
                                <th scope="row">{{ data.getTreatment().getName() }} </th>
                                <td><center>{{ data.dayNumber }}</center></td>
                                <td><center>{{ data.getStartTime()|date('H:i') }}</center></td>
                                <td><center>{{ data.getEndTime()|date('H:i') }}</center></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </div>
    </div>
    </main>


{% endblock %}