{% extends "base.html.twig" %}
{% block body %}
    {% embed 'Structure/Form/create_structure.html.twig' with {'title': data} %}
        {% block form_content %}
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.reservation) }}
                {{ form_widget(form.reservation, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.rehabilitationStayRating) }}
                <div class="d-flex">
                    {% for choice in form.rehabilitationStayRating %}
                        <div class="form-check form-check-inline">
                            {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(choice, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.treatmentRating) }}
                <div class="d-flex">
                    {% for choice in form.treatmentRating %}
                        <div class="form-check form-check-inline">
                            {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(choice, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.staffRating) }}
                <div class="d-flex">
                    {% for choice in form.staffRating %}
                        <div class="form-check form-check-inline">
                            {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(choice, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.text) }}
                {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="text-center mt-4">
                {{ form_widget(form.save)  }}
            </div>
            {{ form_end(form) }}

        {% endblock %}
    {% endembed %}
{% endblock %}