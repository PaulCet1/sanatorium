{% extends "base.html.twig" %}

{% block body %}
    <main id="main">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <h1 class="card-header">Create a New Treatment</h1>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Wprowadź nazwę prowadzącego'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.leading_person) }}
                                {{ form_widget(form.leading_person, {'attr': {'class': 'form-control', 'placeholder': 'Select leading person'}}) }}
                            </div>
                            <!-- Dodaj inne pola formularza, jeśli są dostępne -->
                            <div class="text-center mt-4">
                                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
