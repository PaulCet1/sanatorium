{% extends "base.html.twig" %}

{% block body %}
    <main id="main">
        <div class="container" >
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <h1 class="card-header">Create a New Place</h1>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter name'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.place) }}
                                {{ form_widget(form.place, {'attr': {'class': 'form-control', 'placeholder': 'Enter place'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.postcode) }}
                                {{ form_widget(form.postcode, {'attr': {'class': 'form-control', 'placeholder': 'Enter postcode'}}) }}
                            </div>
                            <div class="text-center mt-4">
                                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
