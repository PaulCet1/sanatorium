{% extends "base.html.twig" %}
{% block body %}
    <main id="main">
        <div class="container">
            <section id="about" class="about">
                <div class="section-title">
                    <h2>Sale zabiegowe</h2>
                    <p>Zarządzaj salami zabiegowymi </p>
                </div>
                <table class="table table-bordered transparent-table">
                    <thead>
                    <tr>
                        <th scope="col">Numer</th>
                        <th scope="col">Nazwa</th>
                        <th scope="col">Rodzaj(group/personal)</th>
                        <th scope="col">Limit ćwiczących</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for therapy_room in pagination %}
                        <tr>
                            <th scope="row">{{ therapy_room.number }}</th>
                            <td>{{ therapy_room.name }}</td>
                            <td>{{ therapy_room.session }}</td>
                            <td>{{ therapy_room.getAttendanceLimit() }}</td>
                            <td>
                                <a href="{{ path('therapy-room-show', {'id': therapy_room.id}) }}"
                                   class="btn btn-success">Pokaż</a>
                                <a href="{{ path('therapy-room-edit', {'id': therapy_room.id}) }}" class="btn btn-info">Edytuj</a>
                                <a href="{{ path('therapy-room-delete', {'id': therapy_room.id}) }}"
                                   class="btn btn-danger" onclick="return confirm('Czy jesteś pewny?')">Usuń</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% include 'Structure/Table/pagination.html.twig' with {'pagination': pagination} %}
            </section>
        </div>
    </main>
{% endblock %}