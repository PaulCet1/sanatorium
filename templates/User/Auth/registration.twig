{% extends "base.html.twig" %}

{% block body %}
    <style>
        body {
            background-image: url('https://upload.wikimedia.org/wikipedia/commons/5/59/Sanatorium_Rownica_interior.jpg');
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            padding: 0;
            color: #fff;
        }
        .form-container {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 30px;
            border-radius: 15px;
        }
    </style>

    <div class="form-container">
        <h2>Rejestracja</h2>
        <p>Zarejestruj się w naszym systemie!</p>

        {% include 'Core/display_alerts.twig' %}
        <form method="POST">
            <div class="form-group">
                <label for="fullname">Imię i nazwisko:</label>
                <input type="text" name="fullname" class="form-control" />
            </div>
            <div class="form-group">
                <label for="username">Login:</label>
                <input type="text" name="username" class="form-control" />
            </div>
            <div class="form-group">
                <label for="email">E-mail:</label>
                <input type="text" name="email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="password">Hasło</label>
                <input type="password" name="password" class="form-control" />
            </div>
            <div class="form-group">
                <label for="repeatPassword">Powtórz hasło</label>
                <input type="password" name="repeatPassword" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Zarejestruj" class="btn btn-primary" />
            </div>
        </form>
    </div>
{% endblock %}