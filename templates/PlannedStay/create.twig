{% extends "base.html.twig" %}

{% block body %}
    <main id="main">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <h1 class="card-header">Dodaj nowy termin turnusu</h1>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.rehabilitation_stay) }}
                                {{ form_widget(form.rehabilitation_stay, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.start_date) }}
                                {{ form_widget(form.start_date, {'attr': {'class': 'form-control'}}) }}
                            </div>


                            <div class="text-center mt-4">
                                {{ form_label(form.save) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
